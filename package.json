{
  "name": "flocc",
  "version": "0.6.0",
  "description": "Agent-based modeling in JavaScript in the browser or server.",
  "main": "dist/flocc.js",
  "module": "dist/flocc.es.js",
  "typings": "dist/main.d.ts",
  "scripts": {
    "build": "rollup -c && tsc --emitDeclarationOnly && node replace-version",
    "docs": "typedoc --watch",
    "docs-build": "typedoc",
    "watch": "rollup -cw",
    "dev": "concurrently 'npm run watch' 'node client/app.js' 'browser-sync start --watch dist/flocc.js'",
    "format": "prettier --write src",
    "test": "node replace-version && jest",
    "perf": "node ./performance/agent.js"
  },
  "author": "Scott Donaldson <scott@openset.tech> (https://openset.tech)",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^14.0.19",
    "browser-sync": "^2.26.14",
    "concurrently": "5.1.0",
    "ejs": "^3.0.2",
    "express": "^4.17.1",
    "jest": "^30.2.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^30.2.0",
    "minimist": "^1.2.5",
    "pixelmatch": "^5.1.0",
    "prettier": "^2.2.1",
    "puppeteer": "^2.1.1",
    "rollup": "^4.57.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3",
    "yargs": "^15.3.1"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "abm",
    "agent-based modeling",
    "agent-based simulation",
    "cellular automata",
    "complex systems",
    "complexity",
    "modeling",
    "multiagent",
    "network",
    "simulation",
    "vizualization"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "./__setups__/canvas.js"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "arrowParens": "avoid"
  }
}
